<p id="notice"><%= notice %></p>


<!-- Make new tweets button -->
<%= link_to 'New Tweet', new_tweet_path, class: 'btn btn-md btn-success' %>
<!-- See all the tweets in a table -->
<table class="table table-striped table-hover">
  <!-- Head -->
  <thead>
    <tr>
    <th>Message</th>
    <th>Username</th>
    <th colspan="3"></th>
    </tr>
  </thead>


  <!-- Body -->
  <tbody>
  <!-- iterate through the tweets, each one in a new row -->
  <% @tweets.each do |tweet| %>
    <tr>
      <td><%= tweet.message %></td>
      <td><%= tweet.user.username %></td>
      <td><%= link_to 'Show', tweet %></td>
      <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
      <td><%= link_to 'Destroy', tweet, method: :delete, data: {confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>

</table>

