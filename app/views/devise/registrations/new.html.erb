<div class="container-fluid">
  <div class="row">
    <div class="col-md-4 col-md-offset-4
                col-sm-6 col-md-offset-3
                col-xs-10 col-xs-offset-1">
      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>



        <div class="field-group">
          <%= f.label :name %> <br>
          <%= f.text_field :name, autofocus: true, placeholder: 'First and Last Name', class: 'form-control' %>
        </div>

        <div class="field form-group">
          <%= f.label :username %> <br>
          <%= f.text_field :username, placeholder: '@username', class: 'form-control' %>
        </div>

        <div class="field form-group">
          <%= f.label :location %> <br>
          <%= f.text_field :username, placeholder: 'New Orleans, Louisiana', class: 'form-control' %>
        </div>

        <div class="field form-group">
          <%= f.label :bio %> <br>
          <%= f.text_field :bio, placeholder: 'Your bio here', class: 'form-control' %>
        </div>




        <div class="field form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, placeholder: 'you@email.com', class: 'form-control' %>
        </div>

        <div class="field form-group">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        </div>

        <div class="field form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: 'btn btn-default btn-sm' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
